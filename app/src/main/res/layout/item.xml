<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    >


    <FrameLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="358dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/card_3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="307dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/card_2"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="23dp"
        android:background="@drawable/shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friendship request"
            android:textColor="#159fdb"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/titulo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d4e1e6"/>


        <LinearLayout
                android:id="@+id/group"
                xmlns:my_app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="2dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="15"
                    app:civ_shadow_color="#999999"
                    android:src="@drawable/avatar_default"
                    android:layout_gravity="center_vertical"
                    android:background="#ffffff"
                    android:id="@+id/friendPhoto"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="20"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/detail_block">


                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:text="Guilherme B. Bastos"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/cidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#667b84"
                        android:textSize="15sp"
                        tools:text="Uberaba" />

                    <TextView
                        android:id="@+id/estado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#667b84"
                        android:textSize="15sp"
                        android:layout_marginTop="-2dp"
                        tools:text="Minas Gerais" />

                </LinearLayout>



            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d4e1e6"/>


        <Button
            android:id="@+id/btnAccept"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="ACCEPT"
            android:background="@drawable/button_blue"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_marginTop="15dp"/>


        <Button
            android:id="@+id/btnIgnore"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="DENY"
            android:background="@drawable/button_red"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="15dp"/>


    </LinearLayout>


    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:alpha="0"
        android:background="@drawable/like" />

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:alpha="0"
        android:background="@drawable/nope" />

</FrameLayout>